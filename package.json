{
  "name": "leave-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "check:unused": "npm run lint && npm run type-check",
    "check:duplicates": "jscpd src --min-lines 5 --min-tokens 50 --ignore '**/*.test.ts,**/*.spec.ts,**/node_modules/**'",
    "check:unused-exports": "ts-prune",
    "check:all": "npm run check:unused && npm run check:duplicates && npm run check:unused-exports",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "fix:carryover": "node scripts/fix-all-carryover-balances.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/react-big-calendar": "^1.8.9",
    "@vercel/analytics": "^1.5.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.3.0",
    "next": "^15.5.9",
    "react": "19.2.1",
    "react-big-calendar": "^1.8.5",
    "react-dom": "19.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "baseline-browser-mapping": "^2.9.11",
    "eslint": "^9",
    "eslint-config-next": "15.5.7",
    "jscpd": "^4.0.5",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-prune": "^0.10.3",
    "typescript": "^5"
  }
}
